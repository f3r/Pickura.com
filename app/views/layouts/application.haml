!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Pickura.com"
    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag    "application"
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.i-bar
            %span.i-bar
            %span.i-bar
          %a.brand{:href => "/"}Pickura.com
          .container.nav-collapse
            %ul.nav
              %li= link_to "Gallery", "/path1"
              %li= link_to "Most Popular", "/path2"
              %li= link_to "Help", "/path3"
            %ul.nav.pull-right
              - if user_signed_in?
                %li= link_to "Hello #{current_user.email}", "/profile", :style => "color:#555"
                %li= link_to 'Sign out', destroy_user_session_path, :method => :delete, :style => "font-weight:bold;"
              - else
                %li
                  .menu_facebook
                    = link_to (image_tag "fb_login.png"), user_omniauth_authorize_path(:facebook)

    .container

      .content
        .row
          .span9
            = yield
          .span3
            .well.sidebar-nav{:style => "height:362px;"}
              %h3{:style => "text-align:center; margin-top: -15px; margin-bottom: 10px"} Backgrounds
              %ul.nav.nav-list{:style => "overflow:scroll;height:362px;"}
                %li#fer= link_to (image_tag "bob-marley_small.png"), '#'
                %li= image_tag "manchester-united_small.png"
                %li= image_tag "bob-marley_small.png"
                %li= image_tag "manchester-united_small.png"
                %li= image_tag "bob-marley_small.png"
                %li= image_tag "manchester-united_small.png"
                %li= image_tag "bob-marley_small.png"
                %li= image_tag "manchester-united_small.png"
                %li= image_tag "bob-marley_small.png"
                %li= image_tag "manchester-united_small.png"
    
      %footer
        %p &copy; Company 2012
    = javascript_include_tag "application"

:javascript
  $('#fer').click(function() {
    $('#user_image').attr("src","http://localhost:3000/assets/bob-marley.jpg");
  });
